@page "/employeedetail/{id}"


@if (Employee == null || Employee.Department == null)
{
    <div class="spinner"></div>
}
else
{
    <h1>Detail Employee </h1><br />
    <div class="card-deck">
        <div class="card m-3" style="min-width: 18rem; max-width:100%">
            <div class="card-header text-center">
                <h2>@Employee.FirstName @Employee.LastName </h2>
            </div>
            <div class="card-body text-center">
                <img clas="card-img-top" style="min-width: 18rem; max-width:50%" src="@Employee.PhotoPath"
                @onmousemove="@Mouse_Move" />
                <h4>@Coordinates</h4>
                <h4> Employee Id : @Employee.EmployeeId</h4>
                <h4> Email : @Employee.Email</h4>
                <h4> Department : @Employee.Department.DepartmentName</h4><br />
            </div>
            <button class="btn btn-primary" @onclick="@Button_Click">@ButtonText</button>
            <div class="card-footer text-center @CssClass">
                <a href="employeepage" class="btn btn-dark">Back</a>
                <a href="#" class="btn btn-info">Edit</a>
                <a href="#" class="btn btn-warning">Delete</a>
            </div>
        </div>
    </div>
}
