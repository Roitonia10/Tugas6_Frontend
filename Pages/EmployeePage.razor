@page "/employeepage"

<h3>Employee List </h3>

@if (Employees == null)
{
    <div class="spinner"></div>
}
else
{
    <button type="button" class="btn btn-info oi oi-plus" aria-hidden="true">CREATE NEW EMPLOYEE</button>
    <div class="card-deck">
        @foreach (var emp in Employees)
        {
            <div class="card m-3" style="min-width: 18rem; max-width:30%">
                <div class="card-header">
                    <h3>@emp.FirstName @emp.LastName</h3>
                </div>
                <img class="card-img-top img-thumbnail" src="@emp.PhotoPath" />
                <div class="card-footer text-center">
                    <a href="@($"employeedetail/{emp.EmployeeId}")" class="btn btn-primary m-1">View</a>
                    <a href="#" class="btn btn-dark m-1">Edit</a>
                    <a href="#" class="btn btn-info m-1">Delete</a>
                </div>
            </div>
        }
    </div>
}